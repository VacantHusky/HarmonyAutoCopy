{
  "manifest_version": 3,
  "name": "HarmonyAutoCopy",
  "version": "1.1",
  "description": "自动复制选中的文本并显示MaterialDesign风格的提示",
  "permissions": ["clipboardWrite"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_icon_disabled": {
      "48": "icon48-disabled.png",
      "128": "icon128-disabled.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}